{
  "name": "apptuner",
  "version": "0.1.0",
  "description": "Hot reload React Native apps instantly - no Expo needed",
  "type": "module",
  "bin": {
    "apptuner": "./dist/cli.js"
  },
  "keywords": [
    "react-native",
    "hot-reload",
    "development",
    "mobile",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:cli": "tsc --project tsconfig.cli.json",
    "preview": "vite preview",
    "watcher": "node watcher-server.cjs",
    "metro": "node metro-server.cjs",
    "relay": "cd relay && npm run dev",
    "mobile": "cd mobile && npm start",
    "start:all": "concurrently -n desktop,relay,watcher,metro,mobile -c blue,green,yellow,cyan,magenta \"npm run dev\" \"npm run relay\" \"npm run watcher\" \"npm run metro\" \"npm run mobile\""
  },
  "dependencies": {
    "@react-native/metro-config": "^0.83.1",
    "@stripe/stripe-js": "^8.7.0",
    "@supabase/supabase-js": "^2.95.3",
    "chalk": "^5.6.2",
    "chokidar": "^5.0.0",
    "commander": "^11.1.0",
    "metro": "^0.83.3",
    "metro-config": "^0.83.3",
    "metro-resolver": "^0.83.3",
    "metro-runtime": "^0.83.3",
    "metro-transform-worker": "^0.83.3",
    "ora": "^8.2.0",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "qrcode.react": "^4.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "@types/node": "^20.19.33",
    "@types/qrcode": "^1.5.6",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.2",
    "typescript": "^5.5.0",
    "vite": "^5.4.0"
  }
}
